# ~/.editorconfig
# EditorConfig helps maintain consistent coding styles across different editors

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# HTML/XML
[*.{html,xml,svg}]
indent_size = 2

# CSS/SCSS/LESS
[*.{css,scss,less}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Ruby
[*.rb]
indent_size = 2

# PHP
[*.php]
indent_size = 4

# Java
[*.java]
indent_size = 4

# C/C++
[*.{c,cpp,h,hpp}]
indent_size = 4

# Config files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Package files
[{package.json,*.lock}]
indent_size = 2

# Ignore minified files
[*.min.*]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = ignore
