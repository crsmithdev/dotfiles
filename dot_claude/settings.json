{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Mcp",
      "EnterPlanMode",
      "ExitPlanMode",
      "Task",
      "TodoWrite",
      "NotebookEdit",
      "BashOutput",
      "KillShell",
      "AskUserQuestion",
      "Skill",
      "SlashCommand",
      "Bash(npm run dev:*)",
      "Bash(pkill:*)",
      "Bash(pgrep:*)",
      "Bash(cat:*)",
      "Bash(killall ngrok:*)",
      "Bash(killall node:*)",
      "Bash(node scripts/ngrok-tunnels.js:*)",
      "Bash(lsof:*)",
      "Bash(source .env)",
      "Bash(/home/crsmi/caller/node_modules/ngrok/bin/ngrok:*)",
      "Bash(echo:*)",
      "Bash(node:*)",
      "Bash(~/.config/ngrok/ngrok.yml)",
      "Bash(docker-compose restart:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose up:*)",
      "Bash(curl:*)",
      "Bash(docker logs:*)",
      "Bash(npm install:*)",
      "Bash(npm run dev:test:*)",
      "Bash(done)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rmdir:*)",
      "Bash(npx tsc:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "model": "sonnet",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/black-box-startup.sh"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/validate-commands.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "python-development@claude-code-workflows": true,
    "unit-testing@claude-code-workflows": true,
    "backend-development@claude-code-workflows": true,
    "application-performance@claude-code-workflows": true,
    "code-documentation@claude-code-workflows": true,
    "comprehensive-review@claude-code-workflows": true,
    "code-refactoring@claude-code-workflows": true,
    "error-diagnostics@claude-code-workflows": true,
    "cicd-automation@claude-code-workflows": true
  },
  "alwaysThinkingEnabled": true
}
